%main
  %section.py-5.text-center.container
    = link_to "Back To Surveys" ,surveys_path, class: 'btn btn-primary'
    = simple_form_for @survey, url: answers_path, method: :post do |f|
      .form-group
        = @survey.title
      .form-group
        - @survey.questions.each do |question|
          .form-group
            = question.question
          = f.simple_fields_for question.answers.new do |answer|
            = answer.input :question_id, as: :hidden, input_html: { value: question.id, name: "survey[answers][][question_id]" }
            - if question.question_type == 'paragraph'
              = answer.input :answer_text, as: :text, placeholder: "Your answer", label: false, input_html: { name: "survey[answers][][answer_text]" }
            - else
              = answer.input :question_option_id, legend_tag: false, input_html: { name: "survey[answers][][question_option_id]" }, as: :radio_buttons, label: false,
                collection: question.question_options.map{|x| [x['name'], x['id']] },
                item_wrapper_class: 'inline',
                label_method: :first,
                include_hidden: false,
                value_method: :second,
                checked: [question.question_options.first.name, question.question_options.first.id]
      .form-group
        = f.submit "Save", class: 'btn btn-primary'